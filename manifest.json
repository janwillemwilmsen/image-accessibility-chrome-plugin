{
  "manifest_version": 3,
  "name": "Image Accessibility Analyzer",
  "version": "1.0",
  "description": "Analyzes images on a webpage for accessibility.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "panel.html"
  },
  "action": {},
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 